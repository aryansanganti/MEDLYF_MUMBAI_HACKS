import { useEffect, useState } from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { ArrowRight, Brain, Calendar, Truck } from "lucide-react";

// Define types
interface OptimizationAction {
  type: string;
  from: string;
  to: string;
  amount: number;
  reason: string;
}

interface ForecastDay {
  day: string;
  predictedPatients: number;
  status: string;
}

interface HospitalForecast {
  hospitalName: string;
  days: ForecastDay[];
}

interface OptimizationData {
  recommendedActions: OptimizationAction[];
  forecast: HospitalForecast[];
}

export default function OptimizationPanel() {
  const [data, setData] = useState<OptimizationData | null>(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    const apiUrl = import.meta.env.VITE_API_URL || "http://localhost:5001";
    
    fetch(`${apiUrl}/api/optimization/plan`)
      .then((res) => res.json())
      .then((data) => {
        // --- LOGGING TO BROWSER CONSOLE ---
        console.log("ðŸ“Š [OptimizationPanel] Data Received from Server:", data);
        // ----------------------------------
        setData(data);
        setLoading(false);
      })
      .catch((err) => {
        console.error("Error fetching optimization plan:", err);
        setLoading(false);
      });
  }, []);

  if (loading) return <div className="p-4 text-muted-foreground">Thinking... (Agent is optimizing resources)</div>;
  if (!data) return <div className="p-4 text-destructive">Failed to load optimization plan.</div>;

  return (
    <div className="space-y-6 mt-8">
      <div className="flex items-center gap-2">
        <Brain className="w-6 h-6 text-primary" />
        <h2 className="text-xl font-bold">Optimization Agent (7-Day Strategy)</h2>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {/* Actions Column */}
        <Card className="border-l-4 border-l-primary">
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <Truck className="w-5 h-5" /> Recommended Transfers
            </CardTitle>
          </CardHeader>
          <CardContent>
            {data.recommendedActions.length === 0 ? (
                <p className="text-muted-foreground">No redistributions needed currently.</p>
            ) : (
                <div className="space-y-4">
                {data.recommendedActions.map((action, i) => (
                    <div key={i} className="flex flex-col p-3 bg-muted/50 rounded-lg text-sm border border-border">
                    <div className="flex justify-between items-center mb-2">
                        <Badge variant="default" className="uppercase">
                          {action.type.replace('_', ' ')}
                        </Badge>
                        <span className="font-bold text-primary">{action.amount} Units</span>
                    </div>
                    <div className="flex items-center gap-2 text-foreground/80">
                        <span className="font-medium">{action.from}</span>
                        <ArrowRight className="w-4 h-4 text-muted-foreground" />
                        <span className="font-medium">{action.to}</span>
                    </div>
                    <p className="text-xs text-muted-foreground mt-2 italic">"{action.reason}"</p>
                    </div>
                ))}
                </div>
            )}
          </CardContent>
        </Card>

        {/* Forecast Column */}
        <Card>
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <Calendar className="w-5 h-5" /> Demand Forecast (Next 7 Days)
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="space-y-4 max-h-[300px] overflow-y-auto pr-2">
              {data.forecast.map((hosp, i) => (
                <div key={i} className="border-b border-border pb-2 last:border-0">
                  <h4 className="font-semibold text-sm mb-2">{hosp.hospitalName}</h4>
                  <div className="grid grid-cols-7 gap-1">
                    {hosp.days.map((day, j) => (
                      <div key={j} className={`text-center p-1 rounded text-[10px] ${
                        day.status === 'CRITICAL' ? 'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400' : 
                        day.status === 'WARNING' ? 'bg-orange-100 text-orange-700 dark:bg-orange-900/30 dark:text-orange-400' : 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400'
                      }`}>
                        <div className="font-bold">{day.day.substring(0,3)}</div>
                        <div>{day.predictedPatients}</div>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  );
}